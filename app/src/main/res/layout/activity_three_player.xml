<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/threePlayerLayout"
    tools:context="ualberta15.reflex.ThreePlayerActivity">

    <Button
        android:layout_width="160dp"
        android:layout_height="300dp"
        android:text="Player One"
        android:id="@+id/PlayerOneButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false" />


    <Button
        android:layout_width="160dp"
        android:layout_height="300dp"
        android:text="Player Two"
        android:id="@+id/PlayerTwoButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/PlayerOneButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:text="Player Three"
        android:id="@+id/PlayerThreeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
